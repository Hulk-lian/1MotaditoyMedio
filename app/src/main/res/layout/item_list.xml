<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <TextView
        android:text="NombreMontadidoElemento"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="@dimen/btnbox"
        android:layout_height="@dimen/btnbox"
        android:id="@+id/btnPlus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_add"
        android:backgroundTint="@color/green"
        />

    <Button
        android:layout_width="@dimen/btnbox"
        android:layout_height="@dimen/btnbox"
        android:id="@+id/btnLess"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_rmv"
        android:backgroundTint="@color/red"
        android:layout_below="@id/btnPlus"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="00"
        android:id="@+id/edtCant"
        android:maxLength="2"
        android:enabled="false"
        android:layout_toLeftOf="@id/btnPlus"
        android:layout_alignBaseline="@id/txvName"
        android:focusable="false"/>

</RelativeLayout>